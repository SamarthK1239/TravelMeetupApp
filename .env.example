# Database Connection
DATABASE_URL=mssql+pyodbc://sqladmin:YourPassword@travelmeetup-sql-dev.database.windows.net/travelmeetup-db-dev?driver=ODBC+Driver+18+for+SQL+Server&Encrypt=yes&TrustServerCertificate=no

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-min-32-characters
JWT_REFRESH_SECRET_KEY=your-refresh-secret-key-here-min-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Azure Key Vault (Optional - for production)
AZURE_KEY_VAULT_URL=https://travelmeetup-kv-dev.vault.azure.net/
USE_AZURE_KEY_VAULT=false

# Application Settings
APP_NAME=TravelMeetup API
ENVIRONMENT=development
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Application Insights (Optional)
APPINSIGHTS_CONNECTION_STRING=
